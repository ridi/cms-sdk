#!/usr/bin/env php
<?php

use Ridibooks\Cms\Console\Command;

$autoloader = require_once __DIR__ . '/../vendor/autoload.php';

if (!$autoloader) {
    die(
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'curl -sS https://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

$application =  new Symfony\Component\Console\Application('RIDI CMS Bootstrap', '0.0.1');
$application->addCommands([
    new Command\DockerDown(),
    new Command\DockerUp(),
    new Command\ServiceAdd(),
    new Command\ServiceExample(),
    new Command\ServiceList(),
    new Command\ServiceRemove(),
]);
$application->run();
